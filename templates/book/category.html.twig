{% extends "base.html.twig" %}

{% block title %}
	Catégorie :
	{{ category.name }}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">{{ category.name }}</li>
	</ol>
    
	<h1>Catégorie :
		{{ category.name }}</h1>

	<div class="row">
		{% for b in category.books %}
			<div class="col-md-3">
				<div class="card">
					<img src="{{ b.picture }}" alt="Image du livre" class="img-fluid">
					<div class="card-body">
						<h4 class="card-title">{{ b.name }}</h4>
						<span class="badge bg-info">{{ b.category.name }}</span>
						<span class="badge bg-danger">{{ b.author.firstname }}
							{{ b.author.lastname }}</span>
						<p class="card-text">
							{{ b.description | u.truncate(80, '...') }}
						</p>
						<a href="#" class="btn btn-primary btn-sm">Détails</a>
						<a href="#" class="btn btn-success btn-sm">Réserver</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
